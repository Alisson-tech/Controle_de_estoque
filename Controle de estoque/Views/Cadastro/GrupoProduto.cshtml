<!--Modelo do produto -->
@model List<Controle_de_estoque.Models.GrupoProdutoModel>
@{
    ViewBag.Title = "Cadastro de Grupo de Produtos";
}
<style>
    #grid_cadastro > thead > tr > th:nth-child(2) {
        width: 110px;
    }
    #grid_cadastro > thead > tr > th:nth-child(3) {
        width: 200px;
    }
    #cadastro {
        width: 70%;
        margin: 0 auto;
    }
    #cadastro_cabecalho{
        border-bottom: 1px #dddddd solid;
    }
    #cadastro_conteudo{
        margin-top: 20px;
    }
    #cabecalho_grid{
        margin-bottom:20px;
    }
    .invisivel {
        display: none;
    }
</style>
<div id="cadastro">
    <section id="cadastro_cabecalho">
        <h1>@ViewBag.Title</h1>
    </section>
    <!--tabela dos produtos -->
    <section id="cadastro_conteudo">

                    <div id="cabecalho_grid" class="row">
                        <div class="col-md-12">
                            <a class="btn btn-success" id="btn_incluir" role="button"><i class="glyphicon glyphicon-plus"></i> Incluir</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <table id="grid_cadastro" class="table table-bordered table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th>Ativo</th>
                                        <th>Ação</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- listar os produtos registrados -->
                                    @foreach(var item in Model)
                                    {
                                    <!-- data-id - passar id para cada linda-->
                                    <tr data-id="@item.Id">
                                        <td>@item.Nome</td>
                                        <td>@{var ativo = (item.Ativo ? "SIM" : "NÃO");} @ativo</td>
                                        <td>
                                            <a class="btn btn-primary btn_alterar"><i class="glyphicon glyphicon-pencil"></i> Alterar</a>
                                            <a class="btn btn-danger btn_excluir"><i class="glyphicon glyphicon-trash"></i> Excluir</a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
         
    </section>
</div>

@Html.Hidden("id_cadastro")
<!-- janela de Cadastro do produto -->
<div id="modal_cadastro" class="form-horizontal invisivel" role="dialog">
    <div id="msg_mensagem_aviso" class="text-danger invisivel"></div>
        <fieldset>
            <div class="row">
                <div class="form-group">
                    <!-- Criar label (id, texto, classe css) -->
                    @Html.Label("txt_nome", "Nome", new { @class = "col-md-3 control-label" })

                    @Html.TextBox("txt_nome", null, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.Label("cbx_ativo", "Ativo", new { @class = "col-md-3 control-label" })
                    <!-- Criar label (id) -->
                    @Html.CheckBox("cbx_ativo")
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="modal-footer">
                            <a id="btn_sair" class="btn btn-default" role="button" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> Sair</a>
                            <a id="btn_confirmar" class="btn btn-primary" role="button"><i class="glyphicon glyphicon-ok"></i> Salvar</a>
                        </div>
                        <div id="msg_aviso" class="alert alert-warning">Falta Preencher os Campos a cima</div>
                        <div id="msg_erro" class="alert alert-danger">ops, erro</div>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
    <!-- scripsts -->
    @section Scripts{
        <script>
        function abrir_form(dados) {
            //esconder mensagens
            $('#msg_mensagem_aviso').empty();
            $('#msg_aviso').hide();
            $('#msg_mensagem_aviso').hide();
            $('#msg_erro').hide();

            //preencher o campo id_cadastro
            $("#id_cadastro").val(dados.Id);

            //preencher textbox e checkbox
            $('#txt_nome').val(dados.Nome);
            $('#cbx_ativo').prop('checked', dados.Ativo);

            //objeto Modal_cadastro
            var modal_cadastro = $("#modal_cadastro");

            //criar janela dialogo
            bootbox.dialog({
                title: '@ViewBag.Title',
                //Chamar Janela de Cadastro
                message: modal_cadastro
            })
            //quando mostrar a janela (modal boostrap)
            .on('shown.bs.modal', function () {
                modal_cadastro.show(0, function () {
                    //textebos ja selecionado
                    $("#txt_nome").focus();
                })
            })
            //quando esconder a janela
            .on('hidden.bs.modal', function () {
                //adicione o objeto modal_cadastro invisivel ao corpo
                modal_cadastro.hide().appendTo('body')
            });
        }

        function criar_linha_grid(dados) {
            var ret =
                '<tr data-id=' + dados.Id + '>' +
                '<td>' + dados.Nome + '</td>' +
                '<td>' + (dados.Ativo ? "SIM" : "NÃO") + '</td>' +
                '<td>' +
                '<a class="btn btn-primary btn_alterar" style=margin-right:3px><i class="glyphicon glyphicon-pencil"></i> Alterar</a>' +
                '<a class="btn btn-danger btn_excluir"><i class="glyphicon glyphicon-trash"></i> Excluir</a>' +
                '</td>' +
                '</tr>';

            return ret;
        }

        //Clique do btn_incluir
        $(document).on('click', '#btn_incluir', function () {
            //chamar a função e preencher todos como vazio
            abrir_form({ Id: 0, Nome: "", Ativo: true });
        })

        //clique dos botões btn_alterar
        $(document).on('click', '.btn_alterar', function () {
            //obter botão
            var btn = $(this),
                //Obter o id da tag 'tr' mais proxima
                id = btn.closest('tr').attr('data-id'),
                //ação do controler cadastro, funcao = RecuperarGrupoProduto. (ação, controler)
                url = '@Url.Action("RecuperarGrupoProduto", "Cadastro")',
                //param - parametro da funcao RecuperarGrupoProduto
                param = {'id':id};
            //executar a ação em metodo post , response = objeto retornado da função
            $.post(url, param, function(response) {
                if (response) {
                    abrir_form(response);
                }
            });
        })
        //clique do botao excluir
        $(document).on('click', '.btn_excluir', function () {
            var btn = $(this),
            //obter tr mais proxima
            tr = btn.closest('tr'),
            //Obter o id da tag 'tr'
            id = tr.attr('data-id'),
            //ação do controler cadastro, funcao = ExcluirGrupoProduto. (ação, controler)
            url = '@Url.Action("ExcluirGrupoProduto", "Cadastro")',
            //param - parametro da funcao RecuperarGrupoProduto
            param = { 'id': id };

            //abrir janela confirmando a exclusão
            bootbox.confirm({
                message: "Realmente deseja excluir o grupo produto?",
                buttons: {
                    confirm: {
                        label: "Sim",
                        className:"btn-success"
                    },
                    cancel: {
                        label: "Não",
                        className:"btn-danger"
                    }
                },
                //função ao excluir
                callback: function (result) {
                    if (result) {

                    //executar a ação em metodo post , response = retorno da ação (sim ou não)
                    $.post(url, param, function(response) {
                        if (response) {
                            tr.remove();
                        }
                    });
                    }
                }
            })
        })
            .on('click', '#btn_confirmar', function() {
                var btn = $(this),
                url = '@Url.Action("SalvarGrupoProduto", "Cadastro")',

                    //parametros em formato json que vai transformar no objeto GrupoProdutoModel
                    param = {
                        Id : $("#id_cadastro").val(),
                        Nome: $("#txt_nome").val(),
                        Ativo: $("#cbx_ativo").prop('checked')

                };

                $.post(url, param, function (response) {
                    //retorno do backend
                    if (response.Resultado == "OK") {
                        //Incluir linha na tabela
                        if (param.Id == 0) {
                            param.Id = response.IdSalvo;
                            //obter tabela
                            var table = $('#grid_cadastro').find('tbody'),
                                //criar linha com o objeto retornado
                                linha = criar_linha_grid(param);

                            table.append(linha);

                        }

                        else {
                            //busco a linha tr no grid cadastro de acordo com o id, e depois busco o td dessa linha
                            var linha = $('#grid_cadastro').find('tr[data-id=' + param.Id + ']').find('td');

                            linha
                                //pego a coluna 0 e adiciono o nome (metodo 'end' permite chamar duas funções de linha)
                                .eq(0).html(param.Nome).end()
                                //pego a coluno 1 e preencho com o ativo
                                .eq(1).html(param.Ativo ? 'SIM' : 'NÃO');
                        }
                        $('#modal_cadastro').parents('.bootbox').modal('hide');
                    }
                    if (response.Resultado == "ERRO") {
                        $('#msg_aviso').hide();
                        $('#msg_mensagem_aviso').hide();
                        //mostrar erro
                        $('#msg_erro').show();
                    }

                    if (response.Resultado == "AVISO") {

                        //adcionar mensagem de erro (do backend) ao HTML 
                        $('#msg_mensagem_aviso').html(formata_msg_aviso(response.Mensagem));
                        //Mostrar aviso
                        $('#msg_aviso').show();
                        //mostrar mensagem
                        $('#msg_mensagem_aviso').show();
                        //esconder erro
                        $('#msg_erro').hide();
                    }
                });
            })

            function formata_msg_aviso(mensagens) {

            var ret = '';

            for (var i = 0; i < mensagens.length; i++)
            {
                ret += '<li>' + mensagens[i] + '</li>';
            }
            return '<ul>' + ret + '</ul>';
        }
        </script>
    }


