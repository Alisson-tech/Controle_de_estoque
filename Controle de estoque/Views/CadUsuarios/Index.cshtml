<!--Modelo do produto -->
@model List<Controle_de_estoque.Models.UsuarioModel>
@{
    Layout = "~/Views/Shared/_Cadastro.cshtml";
    ViewBag.Title = "Usuarios";
}

@section Styles{
    <link href="~/Content/bootstrap-select.css" rel="stylesheet" />
    <link href="~/Content/Cadastro/Usuario.css" rel="stylesheet" />
}

@section TituloGrid{
    <th>Nome</th>
    <th>Login</th>
    <th>Ação</th>
}

@section LinhaGrid{
    <!-- listar os produtos registrados -->
    @{
        var linha = 0;
        foreach (var item in Model)
        {
            linha++;
            if (linha <= ViewBag.QtdMaxLinhas)
            {
                <!-- data-id - passar id para cada linda-->
                <tr data-id="@item.Id">
                    <td>@item.Nome</td>
                    <td>@item.Login</td>
                    <td>
                        <a class="btn btn-primary btn_alterar"><i class="glyphicon glyphicon-pencil"></i> Alterar</a>
                        <a class="btn btn-danger btn_excluir"><i class="glyphicon glyphicon-trash"></i> Excluir</a>
                    </td>
                </tr>
            }
            else
            {
                break;
            }
        }
    }
}

@section CamposCadastro{
    <div class="row">
        <div class="form-group">
            <!-- Criar label (id, texto, classe css) -->
            @Html.Label("txt_nome", "Nome", new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBox("txt_nome", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <!-- Criar label (id, texto, classe css) -->
            @Html.Label("txt_login", "Login", new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBox("txt_login", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <!-- Criar label (id, texto, classe css) -->
            @Html.Label("txt_senha", "Senha", new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.TextBox("txt_senha", null, new { @class = "form-control", type = "password" })
            </div>
        </div>
    </div>
}

@section Scripts{
    <script src="~/Scripts/bootstrap-select.js"></script>
    <script>
        var tituloPag = '@ViewBag.Title';
        var url_excluir ='@Url.Action("ExcluirUsuario", "CadUsuarios")';
        var url_confirmar = '@Url.Action("SalvarUsuario", "CadUsuarios")';
        var url_page_click ='@Url.Action("UsuarioPagina", "CadUsuarios")';
        var url_tam_pag_change ='@Url.Action("UsuarioPagina", "CadUsuarios")';
        var url_alterar ='@Url.Action("RecuperarUsuario", "CadUsuarios")';

    </script>
    <script src="~/Scripts/Cadastro/Usuario.js"></script>
}



